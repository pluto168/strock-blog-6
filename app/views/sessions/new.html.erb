<h1 class="text-center mt-4">Log in</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">    
            <%= form_with(scope: :session,url: login_path, class: "shadow p-3 mb-3 bg-warning rounded" ,local: true) do |f| %>
                <div class="from-group row mt-4">
                    <%=f.label :email, class:"col-2 col-form-label text-primary"%>
                    <div class="col-10">
                        <%=f.email_field :email, class: "form-control shadow arunded",placeholder: "Enter your email address"%>
                    </div>
                </div>
                <div class="from-group row mt-4">
                    <%=f.label :password, class:"col-2 col-form-label text-primary"%>
                    <div class="col-10">
                        <%=f.password_field :password, class: "form-control shadow arunded",placeholder: "Enter your password"%>
                    </div>
                </div>
                <div class="from-group row mt-4 justify-content-center">
                    <%= f.submit "Log in", class: "btn btn-outline-success btn-lg text-dark" %>
                </div>
            <%end%>
        </div>
        <div class="mt-4">
            <%= link_to '[Cancel and return to articles listing]', articles_path%> 
        </div>
    </div>
</div>

